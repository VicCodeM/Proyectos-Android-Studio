<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EstiloTextoConBorde" parent="android:Widget.TextView">
        <item name="android:textColor">@color/lavender</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#FFFFFF</item> <!-- Color del borde -->
        <item name="android:shadowDx">3</item> <!-- Desplazamiento horizontal de la sombra -->
        <item name="android:shadowDy">3</item> <!-- Desplazamiento vertical de la sombra -->
        <item name="android:shadowRadius">3</item> <!-- Radio de la sombra -->
    </style>

    <style name="TextoConBorde">
        <item name="android:textColor">@color/lavender</item> <!-- Color del borde -->
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
        <item name="android:outlineAmbientShadowColor">@android:color/transparent</item>
    </style>

    <style name="EstiloDracula" parent="Theme.AppCompat">
        <!-- Colores principales del esquema Dracula -->
        <item name="colorPrimary">@color/dracula_purple</item>
        <item name="colorPrimaryDark">@color/dracula_purple_dark</item>
        <item name="colorAccent">@color/dracula_pink</item>

        <!-- Texto blanco y fondo oscuro -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/dracula_background</item>

        <!-- Otros ajustes de estilo segÃºn tus preferencias -->
    </style>
    <style name="EstiloBotonBonito" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boton_bonito_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>